<div class="table-responsive">
    <table class="table table-hover">
        <thead class="">
            <th>
              Nome
            </th>
            <th>
              Endereço
            </th>
            <th>
              Telefone
            </th>
            <th>
              E-mail
            </th>
            <th>
              Gênero
            </th>
            <th>
              Idade
            </th>
            <th>
              CPF
            </th>
        </thead>
        <tbody>
        {% for patient in patients %}
          <tr>
            <td>{{ patient.name }}</td>
            <td>{{ patient.address }}</td>
            <td>{{ patient.phone }}</td>
            <td>{{ patient.email }}</td>
            <td>{{ patient.gender }}</td>
            <td>{{ patient.age }}</td>
            <td>{{ patient.cpf }}</td>
            <td>
              <button type="button" id="{{ patient.id }}" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#formModalEdit" onclick="editPatient(this, 'buscar-by-id/')">Editar</button>
            </td>
          </tr>
        {% endfor %}
        </tbody>
    </table>
</div>