<!-- Modal -->
<div class="modal fade" id="formModal-novo-exame" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id='formulario' method="POST" action="salvar/">
                {% include "Components/autocomplete.twig" %}
                <div class="wrapper-input">
                  <input name="type" id="type" placeholder="Tipo Exame" required></input>
                </div>
                <div class="wrapper-input">
                  <input name="result" id="result" placeholder="Resultado"></input>
                </div>
                <div class="row wrapper-input" style="margin-left: 1px;">
                  <div class="col-6">
                    <input type="date" name="date" id="date" min="2021-09-01" max="2050-12-31" required>
                  </div>
                  <div class="col-6">
                    <div class="input-group datetimepicker">
                      <input type="text" class="form-control" name="timepicker" id='timepicker' required>
                      <span class="input-group-addon" style="position: relative; top: 10px; left: 5px;">
                        <span class="fa fa-clock-o"></span>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Salvar</button>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div>

